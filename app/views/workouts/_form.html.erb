<%= form_for @workout do |f| %>
  <% if @workout.errors.any? %>
  <ul>
    <% @workout.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <div>
    <%= f.label :date %>
    <%= f.text_field :date %>
  </div>
  <div>
    <%= f.label :day_type %>
    <%= f.select :day_type, [["Heavy", :heavy], ["Medium", :medium],
      ["Light", :light]] %>
  </div>
  <div>
    <%= f.label :comment %>
    <%= f.text_area :comment, rows: 7, cols: 60 %>
  </div>
  <div>
    <%= f.submit nil %>
  </div>
<% end %>
